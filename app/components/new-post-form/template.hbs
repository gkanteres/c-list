{{#x-select class="form-control" action="showCategories"}}
  {{#x-option value="" disabled="true" selected="true"}}Select a Category{{/x-option}}
  {{#each model as |categoryOverlord|}}
    {{#x-option value=categoryOverlord}}{{categoryOverlord.name}}{{/x-option}}
  {{/each}}
{{/x-select}}
{{#if showCategories}}
  {{category-select categoryOverlord=currentOverlord showPostForm="showPostForm"}}
{{/if}}
{{#if showPostForm}}
  {{post-form category=currentCategory createPost="createPost"}}
{{/if}}
